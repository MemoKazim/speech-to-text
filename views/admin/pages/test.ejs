  <title>Rounded Bordered Data Table</title>
  <style>
    * {
  box-sizing: border-box;
  margin: 0;
  padding: 0;
}

body {
  font-family: Arial, sans-serif;
  padding: 20px;
}

.table-container {
  max-height: 400px;
  overflow-y: auto;
  width: 100%;
}

.rounded-table {
  width: 100%;
  border-collapse: collapse;
  border-radius: 15px;
  overflow: hidden;
}

.rounded-table th,
.rounded-table td {
  padding: 12px;
  text-align: left;
  border: 1px solid #ddd;
}

.rounded-table thead {
  background-color: #333;
  color: white;
  position: sticky;
  top: 0;
  z-index: 1;
}

.rounded-table tbody tr:nth-child(even) {
  background-color: #f2f2f2;
}

.rounded-table tbody tr:nth-child(odd) {
  background-color: #fff;
}

.rounded-table th,
.rounded-table td {
  border: 1px solid #ddd;
}

.rounded-table th {
  font-weight: bold;
}

  </style>
</head>
